function next_sms_skhodka( n )
	local t = final_sms[n]
--		or abort("arhara_dialog.next_sms : incorrect index for table: [%s]", n)

	local snd = t.snd
	if snd then
		snd = sound_object(snd)
		snd:play_no_feedback(Actor, sound_object.s2d, 0, vector(), 1.0)
	end

	local timer = math.max(
		t.timer or 7000,
		snd and snd:length() or 0
	)

	local news_text = t.text
	local x,y = news_manager.get_sender_icon(news_text, nil)
	Actor:give_game_news(news_text, "ui\\ui_iconsTotal", Frect():set(x,y,83,47), 0, timer)

	if t.info and not has_alife_info(t.info) then
		Actor:give_info_portion(t.info)
	end

	if next(final_sms, n) then
		timer = timer/1000 + math.random(10,20)/10
		start_real_timer("run", timer, "arhara_dialog.next_sms_skhodka("..tostring(n+1)..")")
	else
		arhara_dialog.sp_imit_tele_final1()
	end
end
	

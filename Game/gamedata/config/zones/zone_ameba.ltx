
[zone_ameba]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\ameba"
;$prefetch 		= 16
class			= Z_AMEBA
visual			= physics\anomaly\anomaly_studen

hit_impulse_scale	= 0.0
effective_radius	= 0.75 ;размер радиуса в процентах от оригинального, где действует зона
max_velocity_in_zone= 0.5
sound			= zone_mosquito_bald
postprocess		= postprocess_new

ef_anomaly_type			= 1
ef_weapon_type			= 13

artefacts		= af_rusty_thorn,0.6,af_rusty_kristall,0.35,af_rusty_sea-urchin,0.05
BirthProbability = 0.05

;----------- Anomaly settings -----------------------
min_start_power		= 90
max_start_power		= 100
attenuation			= 1
period				= 1
min_artefact_count	= 1
max_artefact_count	= 2

hit_type		= chemical_burn

disable_time		= -1	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 500		;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= -1	;время отключения idle партиклов

ignore_nonalive		= false;
ignore_small		= false;
ignore_artefacts	= true

awaking_time		= 10
blowout_time		= 5000	
accamulate_time		= 1000

attack_animation_start	= 0
attack_animation_end	= 5000

idle_light			= off

visible_by_detector = on

blowout_light		= on
light_color		    = 1.4,1.6,1.3
light_range		    = 12.0
light_time 		    = 5.0;2.8;2.35
light_height		= 1.5			;подъем источника света на высоту

idle_sound			= anomaly\shlang_idle							;постоянный звук
blowout_sound		= anomaly\shlang	;во время выброса(удара) в центре аномалии	
hit_sound			= anomaly\shlang  ;anomaly\anomaly_gravy_hit1	;на персонаже, когда тот получает хит
body_tearing_sound	= anomaly\anomaly_body_tear_1						;звук разрывания трупа
entrance_sound		= anomaly\swamp_appear_1						;при попадании объекта в аномалию

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ветер
blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off


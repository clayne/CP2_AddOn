[logic]
active = heli_move@start
on_hit = hit

[hit]
on_info = %=arhara_dialog.tu_sdurel_sms%

[heli_move@start]
path_move = jup_torgash_heli_move_start
engine_sound = true
default_velocity = 10
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
invulnerable = true
combat_safe_altitude = 75
on_signal = arrived | heli_move@wait_spawn

[heli_move@wait_spawn]
path_move = jup_torgash_heli_desant_move
path_look = jup_torgash_heli_desant_look
engine_sound = true
default_velocity = 0
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 80
velocity = 0
invulnerable = true
on_timer = 10000 | heli_move@wait_off %+jup_torgash_spawn%

[heli_move@wait_off]
path_move = jup_torgash_heli_desant_move
path_look = jup_torgash_heli_desant_look
engine_sound = true
default_velocity = 0
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 80
velocity = 0
invulnerable = true
on_info = {-jup_torgash_spawn} heli_move@wait_otlet

[heli_move@wait_otlet]
path_move = jup_torgash_heli_desant_move
path_look = jup_torgash_heli_desant_look
engine_sound = true
default_velocity = 0
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 80
velocity = 0
invulnerable = true
on_timer = 10000 | heli_move@otlet %=xomyak.sedoy_bye_sms%

[heli_move@otlet]
path_move = jup_torgash_heli_otlet_move
engine_sound = true
default_velocity = 15
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 120
invulnerable = false
on_signal = off | %=release%

